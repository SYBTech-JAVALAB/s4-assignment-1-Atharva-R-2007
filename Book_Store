package basics.java;
class Book {
String title;
String author;
double price;
String isbn;
int stock;
Book(String title, String author, double price, String isbn, int stock) {
this.title = title;
this.author = author;
this.price = price;
this.isbn = isbn;

this.stock = stock;
}
void displayInfo() {
System.out.println("Title : " + title);
System.out.println("Author : " + author);
System.out.println("Price : â‚¹" + price);
System.out.println("ISBN : " + isbn);
System.out.println("Stock : " + stock);
}
void applyDiscount(double percent) {
price = price - (price * percent / 100);
}
void addStock(int quantity) {
stock += quantity;
}
}
public class Helloworld{
public static void main(String[] args) {
Book book1 = new Book("Rich dad poor dad", "Y.M.ujgare ", 500, "ISBN001", 10);
Book book2 = new Book("atomic habbits", "P.M.gade", 650, "ISBN002", 1);
System.out.println(" Book 1 Details ");
book1.displayInfo();
book1.applyDiscount(10);
book1.addStock(5);
book1.displayInfo();
System.out.println("\n Book 2 Details ");
book2.displayInfo();
book2.applyDiscount(5);
book2.addStock(3);
book2.displayInfo();
}
}
